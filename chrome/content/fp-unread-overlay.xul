<!DOCTYPE overlay SYSTEM "chrome://fp-unread/locale/fp-unread.dtd">

<overlay id="fp-unread-extension-overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script type="application/javascript" src="chrome://fp-unread/content/fp-unread.js"/>
  
  <menupopup id="menu_FolderViewsPopup">
    <menuitem id="menu_AdvancedUnread"
              value="unread_hierarchy"
              label="&fp-unread.advancedUnreadFolders.label;"
              accesskey="&fp-unread.advancedUnreadFolders.accesskey;"
              type="radio"
              name="viewmessages"
              oncommand="gFolderTreeView.mode = this.value;">
    </menuitem>
  </menupopup>
</overlay>
