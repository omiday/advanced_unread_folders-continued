<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">

    <em:id>omiday@infrabit.net</em:id>
    <em:version>2.4.1</em:version>
    <em:type>2</em:type>

    <!-- Target Application this extension can install into,
         with minimum and maximum supported versions. -->
    <em:targetApplication>
      <Description>
        <!-- Thunderbird -->
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>3.1</em:minVersion>
        <em:maxVersion>60.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Front End MetaData -->
    <em:creator>Viorel Tabara</em:creator>
    <em:homepageURL>https://github.com/omiday/advanced_unread_folders-continued</em:homepageURL>
    <em:iconURL>chrome://fp-unread/content/fp-unread.png</em:iconURL>
    <em:optionsURL>chrome://fp-unread/content/fp-unread-prefs.xul</em:optionsURL>

    <!-- Extension name and description -->
    <em:name>Advanced Unread Folders Continued</em:name>
    <em:description>Adds a folder view showing unread folders, including their hierarchy</em:description>

    <em:localized>
      <Description>
        <em:locale>de</em:locale>
        <em:name>Erweiterte Ungelesene Ordner</em:name>
        <em:description>Fügt eine Ordneransicht hinzu, die ungelesene Ordner mitsamt ihrer Struktur anzeigt</em:description>
        <em:translator>Philipp Kewisch</em:translator>
      </Description>
    </em:localized>

    <em:localized>
      <Description>
        <em:locale>fr</em:locale>
        <em:name>Dossiers non lus avancés</em:name>
        <em:description>Ajoute une entrée dans la vue des dossiers permettant d'afficher les dossiers non lus, incluant leur hiérarchie</em:description>
        <em:translator>Jean-Philippe Fleury</em:translator>
      </Description>
    </em:localized>

    <em:localized>
      <Description>
        <em:locale>sv-SE</em:locale>
        <em:name>Advanced Unread Folders Continued</em:name>
        <em:description>Lägger till en mappvy som visar olästa mappar, inklusive deras struktur.</em:description>
        <em:translator>Mikael Hiort af Ornäs</em:translator>
      </Description>
    </em:localized>

    <em:localized>
      <Description>
        <em:locale>sl</em:locale>
        <em:name>Advanced Unread Folders Continued</em:name>
        <em:description>Doda pogled map, ki prikazuje neprebrane mape vključno z njihovo hierarhijo.</em:description>
        <em:translator>Peter Klofutar</em:translator>
      </Description>
    </em:localized>
  </Description>
</RDF>
